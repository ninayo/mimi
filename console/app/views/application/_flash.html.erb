<% if !flash.empty? %>
	<div class="container-fluid">
	  <% flash.each do |key, value| %>
	    <div class="shadow m-2 alert alert-warning alert-dismissible fade show" role="alert">
	      <%=value%>
	      <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
	    </div>
	  <% end %>
	</div>
<% end %>